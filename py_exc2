name = input("What is your name?")
age = input("What is your age, %s?" % name)
age = int(age)

birth_year  = 2017 - age
cent_year = (birth_year + 100)

x = ("You will turn 100 years of age in the good year of %s " % cent_year)
print (x)

times_print = int(input("How many times would you like this printed? "))
print ((x + "\n") * times_print)
